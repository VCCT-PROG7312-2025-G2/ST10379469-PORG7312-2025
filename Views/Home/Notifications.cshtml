@model MunicipalServicesApp.Models.CustomCollections.NotificationCollection
@{
    ViewData["Title"] = "Notifications";
    var unreadCount = Model.Count(n => !n.IsRead);
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2>Notifications</h2>
        <p class="text-muted">Stay updated with municipal services</p>
    </div>
    <div class="col-md-6 text-end">
        @if (unreadCount > 0)
        {
            <form asp-action="MarkAllAsRead" method="post">
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="fas fa-check-double me-2"></i>Mark All as Read
                </button>
            </form>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @if (Model.Count == 0)
                {
                    <div class="text-center py-5">
                        <i class="fas fa-bell-slash fa-4x text-muted mb-3"></i>
                        <h4>No notifications yet</h4>
                        <p class="text-muted">You'll receive notifications here for service updates and announcements</p>
                    </div>
                }
                else
                {
                    @foreach (var notification in Model.OrderByDescending(n => n.Timestamp))
                    {
                        string categoryIcon = "";
                        switch (notification.Category)
                        {
                            case NotificationCategory.ServiceUpdate:
                                categoryIcon = "fas fa-sync-alt";
                                break;
                            case NotificationCategory.Emergency:
                                categoryIcon = "fas fa-exclamation-triangle";
                                break;
                            case NotificationCategory.Event:
                                categoryIcon = "fas fa-calendar";
                                break;
                            case NotificationCategory.General:
                                categoryIcon = "fas fa-info-circle";
                                break;
                        }

                        <div class="notification-item @(!notification.IsRead ? "unread" : "")">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-1">
                                        <i class="@categoryIcon me-2 text-primary"></i>
                                        <h6 class="mb-0">@notification.Title</h6>
                                    </div>
                                    <p class="mb-1 text-muted">@notification.Message</p>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>@notification.Timestamp.ToString("f")
                                    </small>
                                </div>
                                <div>
                                    @if (!notification.IsRead)
                                    {
                                        <form asp-action="MarkAsRead" method="post">
                                            <input type="hidden" name="id" value="@notification.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-check me-1"></i>Mark Read
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Read</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>